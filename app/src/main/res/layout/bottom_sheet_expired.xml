<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/ivClock"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/expired_clock_bg"
        android:text="â°"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvExpiredTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response time expired"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvExpiredSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The garage did not respond in time. You can choose another garage or cancel the current request."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginTop="6dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="#F3F4F6">

        <TextView
            android:id="@+id/tvGarageNameExpired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvGarageAddressExpired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnChooseAnotherExpired"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Choose another garage"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#111827"/>

        <Button
            android:id="@+id/btnCancelExpired"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel request"
            android:textAllCaps="false"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</LinearLayout>
