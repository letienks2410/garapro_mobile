<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon xe -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIconContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F0F4FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:src="@drawable/ic_car"
                app:tint="#2196F3"
                android:contentDescription="Car icon" />
        </androidx.cardview.widget.CardView>

        <!-- Tên xe -->
        <TextView
            android:id="@+id/tvVehicleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Toyota Camry"
            app:layout_constraintStart_toEndOf="@id/cardIconContainer"
            app:layout_constraintTop_toTopOf="@id/cardIconContainer"
            app:layout_constraintEnd_toStartOf="@id/layoutActions" />

        <!-- Biển số -->
        <TextView
            android:id="@+id/tvLicensePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_license_plate_badge"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginTop="4dp"
            tools:text="29A - 123.45"
            app:layout_constraintStart_toStartOf="@id/tvVehicleName"
            app:layout_constraintTop_toBottomOf="@id/tvVehicleName" />

        <!-- Thông tin chi tiết -->
        <TextView
            android:id="@+id/tvDetailInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            tools:text="Màu Trắng • 2020"
            app:layout_constraintStart_toStartOf="@id/tvVehicleName"
            app:layout_constraintTop_toBottomOf="@id/tvLicensePlate"
            app:layout_constraintEnd_toStartOf="@id/layoutActions" />

        <!-- Nút Edit & Delete -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="#757575"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Chỉnh sửa"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#E53935"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Xóa"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>