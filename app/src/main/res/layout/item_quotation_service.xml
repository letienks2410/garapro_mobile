<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="0dp"
    android:layout_marginHorizontal="0dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:clipToPadding="false"
    android:padding="0dp"
    android:background="@color/white"
    android:layout_margin="0dp"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">

        <!-- ðŸ”¹ Header Service Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useMaterialThemeColors="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Periodic Maintenance"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall.Emphasized"
                    android:textSize="11dp"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvServiceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Oil change, air filter, system check"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textSize="7dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- ðŸ”¹ Cá»™t giÃ¡: gá»‘c + sau Æ°u Ä‘Ã£i -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <!-- GiÃ¡ gá»‘c (sáº½ gáº¡ch ngang náº¿u cÃ³ Æ°u Ä‘Ã£i) -->
                <TextView
                    android:id="@+id/tvServicePriceBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service: 500.000 â‚«"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <!-- Service + selected parts -->
                <TextView
                    android:id="@+id/tvServicePriceWithParts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Service + parts: 650.000 â‚«"
                    android:textSize="9sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tvDiscountPromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Discount: 600.000 â‚«"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />
                <!-- After promotion -->
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDivider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    app:dividerColor="@color/black"
                    app:dividerThickness="1dp" />

                <TextView
                    android:id="@+id/tvServicePriceAfterPromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="After promotion: 600.000 â‚«"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”¸ Required chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/tvRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Required"
            android:textSize="10dp"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            app:chipBackgroundColor="?attr/colorErrorContainer"
            app:chipStrokeColor="?attr/colorError"
            app:chipStrokeWidth="0.5dp"
            android:textColor="?attr/colorOnErrorContainer"
            android:visibility="gone" />

        <!-- ðŸ”¹ TÃªn Æ°u Ä‘Ã£i -->
        <TextView
            android:id="@+id/tvPromotionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Æ¯u Ä‘Ã£i: Giáº£m 10%"
            android:textSize="9dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone" />

        <!-- ðŸ”¹ Selected parts summary -->
        <LinearLayout
            android:id="@+id/selectedPartsSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="?attr/colorSurfaceContainerHigh"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvSelectedPartsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected:"
                android:textSize="12dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvSelectedParts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:text="Nhá»›t Ä‘á»™ng cÆ¡, Lá»c giÃ³"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- ðŸ”¹ NÃºt chá»n Æ°u Ä‘Ã£i -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chá»n Æ°u Ä‘Ã£i"
            android:textSize="9dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:textAllCaps="false"
            android:paddingHorizontal="0dp"
            app:icon="@drawable/ic_voucher"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconTint="?attr/colorPrimary"
            android:textColor="?attr/colorPrimary" />

        <!-- ðŸ”¸ Toggle button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleParts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Show Parts"
            android:textSize="10dp"
            style="@style/Widget.Material3.Button.TextButton"
            app:icon="@drawable/ic_expand_more_black"
            app:iconGravity="end"
            app:iconSize="18dp"
            app:iconTint="?attr/colorOnSurfaceVariant" />

        <!-- ðŸ”¹ Parts list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPartCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxHeight="300dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
