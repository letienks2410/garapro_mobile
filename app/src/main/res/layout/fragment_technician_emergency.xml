<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn cứu hộ chờ xử lý"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Refresh Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Làm mới"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/ic_refresh"
        app:iconGravity="textStart" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_orders"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có đơn cứu hộ nào"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các đơn cứu hộ mới sẽ hiển thị ở đây"
            android:textColor="@color/gray"
            android:gravity="center" />

    </LinearLayout>

    <!-- Emergencies List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmergencies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Current Accepted Order -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCurrentOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn đang xử lý"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCurrentOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn #1234"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoàn thành"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>