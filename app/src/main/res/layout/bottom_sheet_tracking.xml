<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBackTracking"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Back"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tvTrackingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="On the way"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>



    <TextView
        android:id="@+id/tvTrackingSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The technician is on the way. Please follow on the map."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginTop="6dp"
        android:gravity="center"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="30dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivTechAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_tech"
                android:background="#E5E7EB"
                android:contentDescription="avatar"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTechNameTracking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technician"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvTechPhoneTracking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- View map button moved to bottom -->
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/skeletonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:background="#F9FAFB"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            android:background="#E5E7EB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <View
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="0.6"
                android:background="#E5E7EB"/>
            <View
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_weight="0.4"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/btnViewMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View map"
        android:textAllCaps="false"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white" />

</LinearLayout>
