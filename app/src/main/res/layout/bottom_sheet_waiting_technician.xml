<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Garage Logo -->
    <ImageView
        android:id="@+id/ivGarageAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:src="@android:drawable/ic_menu_myplaces"
        android:tint="#6E6E6E" />


    <TextView
        android:id="@+id/tvAcceptedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garage accepted your request"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvAcceptedSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Waiting for the garage to assign a technician"
        android:textSize="14sp"
        android:textColor="#616161" />

    <TextView
        android:id="@+id/tvGarageNameWaiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Garage name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGarageAddressWaiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garage address"
        android:textSize="13sp"
        android:textColor="#616161" />

    <TextView
        android:id="@+id/tvGarageDistanceWaiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="13sp"
        android:textColor="#616161" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseAccepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="#6200EE"
            app:cornerRadius="12dp" />
    </LinearLayout>

</LinearLayout>
