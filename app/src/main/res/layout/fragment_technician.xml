<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Background -->
    <ImageView
        android:id="@+id/headerBg"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:src="@drawable/technician"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Wrench Icon -->
    <ImageView
        android:id="@+id/ivWrench"
        android:layout_width="1100dp"
        android:layout_height="110dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/gr_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <!-- Role Text -->
    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GaragePro"
        android:textColor="@android:color/white"
        android:background="#757575"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivWrench" />

    <!-- Quote Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="&quot;"
                android:textColor="#FF6B35"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:text="Our skills are our pride\nEvery vehicle repaired is a responsibility"
                android:textColor="#2C3E50"
                android:textSize="20sp"
                android:textStyle="italic" />

            <!-- Divider Line -->
            <View
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_marginTop="24dp"
                android:background="#FF6B35" />

            <!-- Bottom Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Professional • Dedicated • Safe"
                android:textColor="#7F8C8D"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>